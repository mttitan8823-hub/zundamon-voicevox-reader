{
  "manifest_version": 3,
  "name": "ずんだもん読み上げ拡張機能 (VOICVOX)",
  "version": "3.0.0",
  "description": "Braveで選択したテキストをVOICVOXのずんだもん音声で読み上げます（設定機能付き）。",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "contextMenus",
    "offscreen",
    "storage" 
  ],
  /* ★この action ブロックが、アイコンクリック時のポップアップ画面を定義します★ */
  "action": {           
    "default_popup": "popup.html"
  },
  "options_ui": {       
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "http://127.0.0.1:50021/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}